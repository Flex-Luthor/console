{
  "extends": [
    "tslint-config-standard"
  ],
  "rules": {
    "trailing-comma": [
      true,
      {
        "multiline": "always",
        "singleline": "never"
      }
    ],
    "whitespace": [
      true,
      "check-module",
      "check-type",
      "check-decl",
      "check-separator",
      "check-operator",
      "check-branch"
    ],
    "curly": true
  }
}
