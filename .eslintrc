{
  "parser": "babel-eslint",
  "extends": [
    "standard",
    "standard-react"
  ],
  "env": {
    "browser": true,
    "jest": true
  },
  "globals": {
    "__BACKEND_ADDR__": false,
    "__SEGMENT_TOKEN__": false,
    "__ENABLE_SEGMENT__": false,
    "__SMOOCH_TOKEN__": false,
    "analytics": false
  },
  "rules": {
    "semi": [2, "never"],
    "comma-dangle": [2, "always-multiline"],
    "space-infix-ops": 0,
    "max-len": [2, 120, 2],
    "jsx-quotes": ["error", "prefer-single"],
    "react/jsx-no-bind": [1, {
      "allowArrowFunctions": true
    }]
  }
}
